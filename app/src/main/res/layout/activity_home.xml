<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:background="@color/background_color">

    <ImageView
            android:layout_width="@dimen/store_logo_size"
            android:layout_height="@dimen/store_logo_size"
            app:srcCompat="@android:color/holo_red_light"
            android:id="@+id/shop_logo"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/description_store_logo"/>

    <Button
            android:text="@string/our_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/story"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/flavors"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@+id/shop_logo"
            style="@style/store_button_style"/>

    <Button
            android:text="@string/flavors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flavors"
            app:layout_constraintStart_toEndOf="@+id/story"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@+id/shop_logo"
            style="@style/store_button_style"/>

    <Button
            android:text="@string/boxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boxes"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@+id/story"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tins"
            style="@style/store_button_style"/>

    <Button
            android:text="@string/flavors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tins"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@+id/flavors"
            app:layout_constraintStart_toEndOf="@+id/boxes"
            app:layout_constraintHorizontal_bias="0.5"
            style="@style/store_button_style"/>
</android.support.constraint.ConstraintLayout>